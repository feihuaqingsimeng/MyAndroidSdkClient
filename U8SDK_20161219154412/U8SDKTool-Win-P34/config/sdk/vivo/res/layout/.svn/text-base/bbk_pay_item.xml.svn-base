<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout 
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
    	android:layout_height="@dimen/bbk_channel_item_height">
        <ImageView 
        	android:id="@+id/icon"
        	android:layout_marginLeft="@dimen/bbk_payicon_marginLeft"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_alignParentLeft="true"
    		android:layout_centerVertical="true"
    		android:layout_marginRight="8dip"/>
    	<TextView 
        	android:id="@+id/title"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_centerVertical="true"
    		android:layout_toRightOf="@+id/icon"
    		android:textColor="@color/bbk_listitem_textcolor"
    		android:textSize="@dimen/bbk_listitem_textsize"/>
    	<TextView 
        	android:id="@+id/activityType"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@+id/title"
    		android:layout_marginLeft="3dip"
    		android:layout_marginRight="5dip"
    		android:paddingLeft="2dip"
    		android:paddingRight="2dip"
    		android:layout_centerVertical="true"
    		android:gravity="center"
    		android:text="@string/bbk_action"
    		android:textColor="@color/bbk_channel_activity_type_textcolor"
    		android:textSize="@dimen/bbk_channel_activity_type_textsize"
    		android:background="@drawable/vivo_action_background"/>
    	<TextView 
        	android:id="@+id/activityDesc"
        	android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:layout_toRightOf="@+id/activityType"
    		android:layout_marginRight="@dimen/bbk_activity_desc_marginRight"
    		android:layout_centerVertical="true"
    		android:textColor="@color/bbk_channel_activity_desc_textcolor"
    		android:textSize="@dimen/bbk_channel_activity_desc_textsize"
    		android:singleLine="true"/>
		<CheckBox 
	    	android:id="@+id/isCheck"
	    	android:layout_width="21dip"
    		android:layout_height="wrap_content"
    		android:layout_alignParentRight="true"
    		android:clickable="false"
    		android:button="@drawable/bbk_radion_box_button"
    		android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
