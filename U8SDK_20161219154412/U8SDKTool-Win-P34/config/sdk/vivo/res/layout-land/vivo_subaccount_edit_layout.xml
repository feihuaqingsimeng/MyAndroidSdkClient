<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/subeditlist_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="330dip"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/vivo_account_background"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dip" >

            <LinearLayout
                android:id="@+id/titleLeftBtn_layout"
                android:layout_width="40dip"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical" >

                <ImageView
                    android:id="@+id/subeditlist_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dip"
                    android:background="@drawable/vivo_btn_title_back" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/titleLeftBtn_layout"
                android:text="@string/vivo_sub_edit"
                android:textColor="@color/vivo_black"
                android:textSize="17dp" />
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/vivo_edit_line_bg_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="110dip" >

            <ListView
                android:id="@+id/subeditlist_listview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:cacheColorHint="#00000000"
                android:divider="@drawable/vivo_sub_divider_line"
                android:dividerHeight="1px"
                android:fastScrollEnabled="false"
                android:listSelector="#00000000"
                android:scrollbars="none" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>